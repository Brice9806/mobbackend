{% extends 'base.html.twig' %}

{% block title %}Paiement index{% endblock %}

{% block body %}
    <h1>Paiement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ModePaiement</th>
                <th>Montant</th>
                <th>DatePaiement</th>
                <th>HeurePaiement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paiement in paiements %}
            <tr>
                <td>{{ paiement.id }}</td>
                <td>{{ paiement.modePaiement }}</td>
                <td>{{ paiement.montant }}</td>
                <td>{{ paiement.datePaiement ? paiement.datePaiement|date('Y-m-d') : '' }}</td>
                <td>{{ paiement.heurePaiement ? paiement.heurePaiement|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_adminpaiement_show', {'id': paiement.id}) }}">show</a>
                    <a href="{{ path('app_adminpaiement_edit', {'id': paiement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adminpaiement_new') }}">Create new</a>
{% endblock %}
