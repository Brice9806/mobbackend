{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
  <style>
        /* Styles pour la page */
        body {
            font-family: Arial, sans-serif;
             background-image: url('{{ asset('images/im1.jpg') }}');
            background-size: cover; /* Pour couvrir toute la page */
            background-repeat: no-repeat; /* Pas de répétition de l'image */
            background-attachment: fixed; /* L'image reste fixe pendant le défilement */
        
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Styles pour l'en-tête */
        h1 {
            font-size: 36px;
            color: #333;
            margin: 20px 0;
            text-align: center;
            text-transform: uppercase;
        }

        /* Styles pour la table */
        table {
            width: 90%;
            max-width: 1200px;
            background-color: #fff;
            border-collapse: collapse;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            margin-top: 20px;
        }

        table th, table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        table th {
            background-color: #27A462;
            color: #fff;
        }

        table td {
            background-color: #f9f9f9;
        }

        /* Styles pour les boutons */
        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin-right: 10px;
            border: none;
            background-color: #27A462;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        /* Styles pour les animations */
        .animated {
            animation-duration: 1s;
        }

        .fadeIn {
            animation-name: fadeIn;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>

    <h1 class="animated fadeIn">user index</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}"class="btn" >show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"class="btn" >edit</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}"class="btn">Create new</a>
{% endblock %}
