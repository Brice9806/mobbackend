{% extends 'base.html.twig' %}

{% block title %}Trajet{% endblock %}

{% block body %}
    <style>
        /* Styles pour la page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Styles pour le titre */
        h1 {
            font-size: 36px;
            color: #333;
            margin: 20px 0;
            text-align: center;
            text-transform: uppercase;
        }

        /* Styles pour la table */
        table {
            width: 90%;
            max-width: 600px;
            background-color: #fff;
            border-collapse: collapse;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            margin-top: 20px;
        }

        table th, table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        table th {
            background-color: #27A462;
            color: #fff;
        }

        table td {
            background-color: #f9f9f9;
        }

        /* Styles pour les liens */
        a {
            text-decoration: none;
            padding: 8px 16px;
            background-color: #27A462;
            color: #fff;
            border-radius: 4px;
            margin: 10px;
            display: inline-block;
        }

        a:hover {
            background-color: yellow;
        }

        /* Styles pour le formulaire de suppression */
        .delete-form {
            text-align: center;
            margin-top: 20px;
        }
    </style>

    <h1>Trajet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trajet.id }}</td>
            </tr>
            <tr>
                <th>Ville de Départ</th>
                <td>{{ trajet.villeDepart }}</td>
            </tr>
            <tr>
                <th>Ville d'Arrivée</th>
                <td>{{ trajet.villeArrive }}</td>
            </tr>
            <tr>
                <th>Date de Départ</th>
                <td>{{ trajet.dateDepart ? trajet.dateDepart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date d'Arrivée</th>
                <td>{{ trajet.dateArrive ? trajet.dateArrive|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure de Départ</th>
                <td>{{ trajet.heureDepart ? trajet.heureDepart|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure d'Arrivée</th>
                <td>{{ trajet.heureArrive ? trajet.heureArrive|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Type de Bus</th>
                <td>{{ trajet.typeBus }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trajet_index') }}">Retour à la liste</a>

    <a href="{{ path('app_trajet_edit', {'id': trajet.id}) }}">Modifier</a>

    {{ include('trajet/_delete_form.html.twig') }}
{% endblock %}
