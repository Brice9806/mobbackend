{% extends 'base.html.twig' %}

{% block title %}Stop index{% endblock %}

{% block body %}

  <style>
        /* Styles pour la page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Styles pour l'en-tÃªte */
        h1 {
            font-size: 36px;
            color: #333;
            margin: 20px 0;
            text-align: center;
            text-transform: uppercase;
        }

        /* Styles pour la table */
        table {
            width: 90%;
            max-width: 1500px;
            background-color: #fff;
            border-collapse: collapse;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            margin-top: 20px;
        }

        table th, table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        table th {
            background-color: #27A462;
            color: #fff;
        }

        table td {
            background-color: #f9f9f9;
        }

        /* Styles pour les boutons */
        .btn {
            display: inline-block;
            padding: 6px 12px;
            margin-right: 8px;
            border: none;
            background-color: #27A462;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: yellow;
        }

        a {
        text-decoration: none;
        padding: 8px 16px;
        background-color: #27A462;
        color: #fff;
        border-radius: 4px;
        margin: 10px;
        display: inline-block;
    }

    a:hover {
        background-color: yellow;
    }

        /* Styles pour les animations */
        .animated {
            animation-duration: 1s;
        }

        .fadeIn {
            animation-name: fadeIn;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>

    <h1 class="animated fadeIn">Stop index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>VilleStop</th>
                <th>TempsStop</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stop in stops %}
            <tr>
                <td>{{ stop.id }}</td>
                <td>{{ stop.villeStop }}</td>
                <td>{{ stop.tempsStop }}</td>
                <td>
                    <a href="{{ path('app_stop_show', {'id': stop.id}) }}" class="btn">show</a>
                    <a href="{{ path('app_stop_edit', {'id': stop.id}) }}" class="btn">edit</a>
                    <a href="{{ path('app_magasin_new') }}" class="btn">Ajouter magasin</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stop_new') }}" class="btn">Create new</a>
{% endblock %}
